<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="32dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Active Sensor"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Only one sensor can be active at a time in the Playground."
        android:textSize="14sp"
        android:layout_marginBottom="16dp"
        android:textColor="#666666"/>

    <RadioGroup
        android:id="@+id/rg_sensors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rb_magnetometer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Magnetometer (Magnetic Field)"
            android:textSize="18sp"
            android:padding="8dp"/>

        <RadioButton
            android:id="@+id/rb_accelerometer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Accelerometer (Motion/Gravity)"
            android:textSize="18sp"
            android:padding="8dp"/>

        <RadioButton
            android:id="@+id/rb_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Light Sensor (Ambient Lux)"
            android:textSize="18sp"
            android:padding="8dp"/>
    </RadioGroup>

</LinearLayout>